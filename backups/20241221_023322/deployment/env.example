# Flask Configuration
FLASK_ENV=development  # Set to production in production environment
FLASK_DEBUG=1         # Set to 0 in production
PORT=5001

# Firebase Configuration
ENABLE_FIREBASE_SYNC=true  # Set to false if not using Firebase

# Firebase Web App Configuration
FIREBASE_API_KEY=your_api_key_here
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_AUTH_DOMAIN=your_auth_domain_here
FIREBASE_STORAGE_BUCKET=your_storage_bucket_here
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here

# Firebase Service Account Credentials
# These should be kept secret and never committed to version control
FIREBASE_PRIVATE_KEY_ID=your_private_key_id_here
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your_client_email_here
FIREBASE_CLIENT_ID=your_client_id_here
FIREBASE_CLIENT_X509_CERT_URL=your_cert_url_here

# Feature Flags
SHOW_DOWNLOAD_BUTTON=true
SHOW_CLEAR_RESULTS_BUTTON=true
SHOW_TEST_PARAMETERS_BUTTON=true

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
